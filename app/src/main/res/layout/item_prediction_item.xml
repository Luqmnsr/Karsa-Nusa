<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/prediction_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="NAMA BATIK"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prediction_item_confidence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TINGKAT KEPERCAYAAN BATIK"
        app:layout_constraintEnd_toEndOf="@id/prediction_item_name"
        app:layout_constraintStart_toStartOf="@id/prediction_item_name"
        app:layout_constraintTop_toBottomOf="@id/prediction_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>
